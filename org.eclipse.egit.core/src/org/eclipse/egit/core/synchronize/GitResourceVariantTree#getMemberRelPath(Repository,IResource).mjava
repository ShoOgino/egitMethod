	private String getMemberRelPath(Repository repo, IResource member) {
		String repoWorkDir = repo.getWorkDir().toString();
		if (!"/".equals(File.separator)) { 			repoWorkDir = repoWorkDir.replace(File.separatorChar, '/');
		}

		String memberRelPath = member.getLocation().toString();
		memberRelPath = memberRelPath.replace(repoWorkDir, ""); 		if (memberRelPath.startsWith("/"))			memberRelPath = memberRelPath.substring(1);

		return memberRelPath;
	}

