	public void deleteRecursive(File d) throws IOException {
		if (!d.exists())
			return;

		File[] files = d.listFiles();
		if (files != null) {
			for (int i = 0; i < files.length; ++i) {
				if (files[i].isDirectory())
					deleteRecursive(files[i]);
				else
					deleteFile(files[i]);
			}
		}
		deleteFile(d);
		assert !d.exists();
	}

